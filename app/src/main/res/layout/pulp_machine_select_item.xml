<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/num_txt"
        android:layout_marginLeft="@dimen/btn_padding"
        android:layout_width="@dimen/head_size"
        style="@style/txt_blue_style"
        android:text="1"
        android:gravity="center"
        android:background="@drawable/edit_bg"
        android:layout_gravity="center_vertical"
        android:layout_height="@dimen/head_size" />
    <ImageView
        android:layout_width="@dimen/head_size"
        android:layout_height="@dimen/head_size"
        android:layout_margin="@dimen/btn_padding"
        android:src="@mipmap/ic_norse"
        android:scaleType="fitXY"
        android:id="@+id/head_image" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            style="@style/txt_black_style"
            android:text="姓名"
            android:id="@+id/name_txt" />

        <TextView
            android:layout_marginTop="@dimen/btn_padding"
            style="@style/txt_grey_small_style"
            android:text="43252"
            android:id="@+id/id_txt" />

    </LinearLayout>
</LinearLayout>